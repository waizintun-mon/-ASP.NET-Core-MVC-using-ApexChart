
@model ApexChartPieChartModel
@{
    int[] _series = Model.Series;
    string[] _label = Model.Label;
  
}

<div id="chart"></div>

@section Scripts{

    <script>
    const _series =  @Html.Raw(JsonConvert.SerializeObject(_series))
    const _label =   @Html.Raw(JsonConvert.SerializeObject( _label))

    var options = {
      series: _series,
      chart: {
      width: 380,
      type: 'pie',
    },
    labels:_label,
    responsive: [{
      breakpoint: 480,
      options: {
        chart: {
          width: 200
        },
        legend: {
          position: 'bottom'
        }
      }
    }]
    };

    var chart = new ApexCharts(document.querySelector("#chart"), options);
    chart.render();


</script>
}
